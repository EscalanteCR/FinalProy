@model IEnumerable<FinalProy.Models.noticias>

@{
    ViewBag.Title = "Lista de noticias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear una nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreNoticia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CuerpoNoticia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreNoticia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CuerpoNoticia)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdNoticia }) |
            @Html.ActionLink("Consultar", "Details", new { id=item.IdNoticia }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdNoticia })
        </td>
    </tr>
}

</table>
